<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tableLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <Button
            android:id="@+id/buttonCarTrafficLight"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/red"
            android:backgroundTint="@color/red"
            android:onClick="saveEvent"
            android:text="Traffic light"
            android:textSize="@dimen/activity_vertical_margin" />

        <Button
            android:id="@+id/buttonCarStopSign"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/orange"
            android:backgroundTint="@color/orange"
            android:text="Stop sign"
            android:onClick="saveEvent"
            android:textSize="@dimen/activity_vertical_margin" />
        
        <Button
            android:id="@+id/buttonCarYeld"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/yellow"
            android:backgroundTint="@color/yellow"
            android:text="Yeld"
            android:onClick="saveEvent"
            android:textSize="@dimen/activity_vertical_margin" />

    </TableRow>

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

         <Button
             android:id="@+id/buttonCarSpeedBumper "
             android:layout_width="0dp"
             android:layout_height="fill_parent"
             android:layout_weight="1"
             android:background="@drawable/green"
             android:backgroundTint="@color/green"
             android:text="Speed Bumper"
             android:onClick="saveEvent"
             android:textSize="@dimen/activity_vertical_margin" />

        <Button
            android:id="@+id/buttonCarPedestrianCrossing"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/blue"
            android:backgroundTint="@color/blue"
            android:text="Pedestrian crossing"
            android:onClick="saveEvent"
            android:textSize="@dimen/activity_vertical_margin" />
        
         <Button
             android:id="@+id/buttonCarRailCrossing"
             android:layout_width="0dp"
             android:layout_height="fill_parent"
             android:layout_weight="1"
             android:background="@drawable/purple"
             android:backgroundTint="@color/purple"
             android:text="Rail crossing"
             android:onClick="saveEvent"
             android:textSize="@dimen/activity_vertical_margin" />

    </TableRow>
    
    <TableRow
        android:id="@+id/tableRow3"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <Button
            android:id="@+id/buttonCarObstacle"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/pink"
            android:backgroundTint="@color/pink"
            android:text="Obstacle"
            android:onClick="saveEvent"
            android:textSize="@dimen/activity_vertical_margin" />

        <Button
            android:id="@+id/buttonCarPark"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/brown"
            android:backgroundTint="@color/brown"
            android:text="Park"
            android:onClick="saveEvent"
            android:textSize="@dimen/activity_vertical_margin" />
        
         <Button
             android:id="@+id/buttonCarExit"
             android:layout_width="0dp"
             android:layout_height="fill_parent"
             android:layout_weight="1"
             android:background="@color/black"
             android:backgroundTint="@color/black"
             android:text="Exit"
             android:onClick="saveEvent"
             android:textColor="@color/white"
             android:textColorLink="@color/white"
             android:textSize="@dimen/activity_vertical_margin" />

    </TableRow>

</TableLayout>
